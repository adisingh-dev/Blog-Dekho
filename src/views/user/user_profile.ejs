<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile</title>
</head>
<link rel="stylesheet" href="/css/global.css">
<link rel="stylesheet" href="/css/user_profile.css">

<body>
    <div id="overlay"></div>
    <%- include('../components/navbar.ejs') %>
    <div class="master-container">
        <div class="profile-container">
            <div class="profile-pic-lg">
                <img src="<%= responseJson.userinfo.profilepic %>" alt="" class="userprofilepic-preview">
                <form method="post" class="userprofilepic-form">
                    <input type="file" name="userprofilepic" id="userprofilepic" hidden>
                    <label for="userprofilepic" id="userprofilepic-label">Select File</label>
                    <button type="submit" class="userprofilepic-upload">Upload</button>
                </form>
                <p class="verdict"></p>
            </div>
            <div class="userdetails">
                <h1 class="username"><%=responseJson.userinfo.username%></h1>
                <div class="email-wrapper">
                    <p class="email-lg">E Mail</p>
                    <p class="email-sm"><%=responseJson.userinfo.email%></p>
                </div>
                <div class="about-wrapper">
                    <p class="about-lg">About</p>
                    <div class="about-content">
                        <textarea class="about-sm" placeholder="<%= responseJson.userinfo.about? responseJson.userinfo.about: 'Let others know about you!'%>"></textarea>
                        <div class="about-edit">
                            <img src="/img/edit.svg" alt="" class="about-editimg">
                        </div>
                    </div>
                    <div class="about-actions">
                        <div class="about-verdict"></div>
                        <button type="submit" class="about-save" disabled>Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script type="text/javascript" src="/js/axios.min.js"></script>
<script src="/js/user_profile.js" type="text/javascript"></script>